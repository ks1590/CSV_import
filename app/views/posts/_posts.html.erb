<table class="table table-bordered">
  <thead>
    <th>id</th>
    <th>月</th>
    <th>決済方法</th>
    <th>支払先</th>
    <th>金額</th>
    <th>メモ</th>
  <thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.month %></td>
        <td><%= post.method %></td>
        <td><%= post.payee %></td>
        <td><%= number_to_currency(post.amount, unit: "￥", strip_insignificant_zeros: true) %></td>
        <td><%= post.note %></td>
      </tr>
    <% end %>
  </tbody>  
</table>