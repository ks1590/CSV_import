        / top-nav
        .col-xl-10.col-lg-9.col-md-8.ml-auto.bg-dark.fixed-top.py-2.top-navbar
          .row.align-items-center
            .col-md-4
              %h4.text-light.text-uppercase.mb-0 Dashboard
            .col-md-5
              %form
                .input-group
                  %input.form-control.search-input{:placeholder => "Search...", :type => "text"}/
                  %button.btn.btn-white.search-button{:type => "button"}
                    %i.fas.fa-search.text-danger
            .col-md-3
              %ul.navbar-nav
                %li.nav-item.icon-parent
                  %a.nav-link.icon-bullet{:href => "#"}
                    %i.fas.fa-comments.text-muted.fa-lg
                %li.nav-item.icon-parent
                  %a.nav-link.icon-bullet{:href => "#"}
                    %i.fas.fa-bell.text-muted.fa-lg
                %li.nav-item.ml-md-auto
                  %a.nav-link{"data-target" => "#sign-out", "data-toggle" => "modal", :href => "#"}
                    %i.fas.fa-sign-out-alt.text-danger.fa-lg
