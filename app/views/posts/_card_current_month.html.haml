.row.pt-md-5.mt-md-3.mb-5
  .col-xl-3.col-sm-6.p-2
    .card.card-common
      .card-body
        .d-flex.justify-content-between
          %i.fas.fa-shopping-cart.fa-3x.text-warning
          .text-right.text-secondary
            %h5 今月の支出
            %h3
              = number_to_currency(@current_month, unit: "円", strip_insignificant_zeros: true)
  .col-xl-3.col-sm-6.p-2
    .card.card-common
      .card-body
        .d-flex.justify-content-between
          %i.fas.fa-money-bill-alt.fa-3x.text-success
          .text-right.text-secondary
            %h5 先月の支出
            %h3
              = number_to_currency(@last_month, unit: "円", strip_insignificant_zeros: true)