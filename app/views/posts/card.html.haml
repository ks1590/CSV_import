.row.pt-md-5.mt-md-3.mb-5
    .col-xl-3.col-sm-6.p-2
      .card.card-common
        .card-body
          .d-flex.justify-content-between
            %i.fas.fa-users.fa-3x.text-info
            .text-right.text-secondary
              %h5 今年の支出
              %h3
                = number_to_currency(@current_month, unit: "円", strip_insignificant_zeros: true)
    .col-xl-3.col-sm-6.p-2
      .card.card-common
        .card-body
          .d-flex.justify-content-between
            %i.fas.fa-chart-line.fa-3x.text-danger
            .text-right.text-secondary
              %h5 去年の支出
              %h3
                = number_to_currency(@current_month, unit: "円", strip_insignificant_zeros: true)
  / end of cards